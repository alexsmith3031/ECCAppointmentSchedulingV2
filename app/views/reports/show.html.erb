<p>
<h1>Report for <%= @report.dateQuery.strftime("%B %-d, %Y") %></h1>
</p>

<hr>

<table>
  <thead>
  <tr>
    <th>Customer Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Vehicle</th>
    <th>Insurance</th>
    <th>Time</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @customers.each do |customer| %>
      <% if customer.appointment.appDate.strftime("%B %-d, %Y") == @report.dateQuery.strftime("%B %-d, %Y") %>
      <tr class="indexPage">
        <td><%= customer.firstName %> <%= customer.middleInitial %> <%= customer.lastName %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.vehicle.make %> <%= customer.vehicle.model %> <%= customer.vehicle.year %></td>
        <td><%= customer.insurance.companyName %> <%= customer.insurance.claimNumber %></td>
        <td><%= customer.appointment.appDate.strftime("%I:%M %p") %></td>
        <td><%= customer.appointment.description %></td>
      </tr>
      <% end %>
        <% end %>
  </tbody>
</table>


<br><br>
<hr>

