<%= form_for @customer do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :firstName %>
    <%= form.text_field :firstName, id: :customer_firstName %>
  </div>

  <div class="field">
    <%= form.label :middleInitial %>
    <%= form.text_field :middleInitial, id: :customer_middleInitial %>
  </div>

  <div class="field">
    <%= form.label :lastName %>
    <%= form.text_field :lastName, id: :customer_lastName %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :customer_email %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :customer_phone %>
  </div>

    <%= form.fields_for :vehicle do |v_form| %>

    <div class="field">
      <%= v_form.label :make %>
      <%= v_form.text_field :make, id: :vehicle_make %>
    </div>

    <div class="field">
      <%= v_form.label :model %>
      <%= v_form.text_field :model, id: :vehicle_model %>
    </div>

    <div class="field">
      <%= v_form.label :year %>
      <%= v_form.text_field :year, id: :vehicle_year %>
    </div>

        <% end %>

    <%= form.fields_for :appointment do |app_form| %>

    <div class="field">
      <%= app_form.label :appDate %>
      <%= app_form.datetime_select :appDate, id: :appointment_appDate %>
    </div>

    <div class="field">
      <%= app_form.label :description %>
      <%= app_form.text_field :description, id: :appointment_description %>
    </div>

        <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
