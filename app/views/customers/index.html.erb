<h1>Appointment Management</h1>

<hr>

<div id="table-wrapper">
  <div id="table-scroll">
<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Vehicle</th>
      <th>Insurance</th>
      <th>Appointment</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr class="indexPage">
        <td><%= customer.firstName %> <%= customer.middleInitial %> <%= customer.lastName %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.vehicle.make %> <%= customer.vehicle.model %> <%= customer.vehicle.year %></td>
        <td><%= customer.insurance.companyName %> <%= customer.insurance.claimNumber %></td>
        <td><%= customer.appointment.appDate.strftime("%B %-d, %Y at %I:%M %p") %></td>
        <td><%= customer.appointment.description %></td>
        <td><%= link_to 'Update', edit_customer_path(customer) %></td>
        <td><%= link_to 'View', customer %></td>
        <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>
<table>
  <td>
<b><i>Click here to generate a report: </i></b>
  </td>
  <td>
    <div class="report">
  <%= link_to (image_tag "report-icon.gif"), new_report_path %>
    </div>
  </td>
</table>
<hr>
<br>
