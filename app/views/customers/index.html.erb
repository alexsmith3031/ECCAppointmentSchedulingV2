<p id="notice"><%= notice %></p>

<h1>Appointment Management</h1>

<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Vehicle</th>
      <th>Insurance</th>
      <th>Appointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr class="indexPage">
        <td><%= customer.firstName %> <%= customer.middleInitial %> <%= customer.lastName %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.vehicle.make %> <%= customer.vehicle.model %> <%= customer.vehicle.year %></td>
        <td><%= customer.insurance.companyName %> <%= customer.insurance.claimNumber %></td>
        <td><%= customer.appointment.appDate.strftime("%B %-d, %Y at %I:%M %p") %></td>
        <td><%= link_to 'View', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

